{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "lib": ["es2020", "dom", "webworker"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true

        /* ---------------------------------------------------------------------- */
    /*  Hardened TypeScript settings (security & maintainability)             */
    /* ---------------------------------------------------------------------- */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true

  },
  "include": ["./src/**/*", "./src-node/**/*"]
}
